{
  "name": "mastorscdn",
  "version": "1.0.0",
  "description": "MastorsCDN production site with component loader",
  "scripts": {
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:scss\" \"npm run serve\"",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/scss:dist/css --style compressed --load-path=node_modules",
    "build:ts": "tsc && npm run generate-loader",
    "build:scss": "sass src/scss:dist/css --style compressed --load-path=node_modules",
    "build": "npm run build:ts && npm run build:scss",
    "generate-loader": "node build-auto-loader.js",
    "serve": "npx http-server -p 3000 -c-1",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d ."
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "gh-pages": "^6.1.0",
    "http-server": "^14.1.1",
    "sass": "^1.69.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mastorscdn",
    "css",
    "utility",
    "component-loader"
  ],
  "author": "KEHEM-IT",
  "license": "MIT",
  "dependencies": {
    "mastors-fluider": "^1.6.1",
    "mastors-gridder": "^1.3.5",
    "swiper": "^12.0.3"
  }
}
